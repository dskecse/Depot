%tr{id: "#{ 'current_item' if line_item == @current_item }"}
  %td #{ line_item.quantity }&times;
  %td= line_item.product.title
  %td.item_price= number_to_currency(line_item.total_price)
  %td.decrement
    .btn-group
      = link_to '&ndash;'.html_safe, decrement_path(id: line_item.id), method: :post, remote: true, class: 'btn'
      = link_to 'Destroy', line_item, method: :delete, remote: true, class: 'btn'
