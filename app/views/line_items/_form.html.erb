<%= simple_form_for(@line_item, html: { class: 'form-horizontal' }, defaults: { input_html: { class: 'span4' }}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :product_id %>
    <%= f.input :cart_id %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
