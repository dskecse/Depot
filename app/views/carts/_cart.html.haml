%h1 Your Pragmatic Cart
%table
  = render(cart.line_items)
  %tr.total_line
    %td(colspan=2) Total
    %td.total_cell= number_to_currency(cart.total_price)
    %td

%p
  = link_to new_order_path, class: 'btn btn-primary' do
    %i.icon-shopping-cart.icon-white
    Checkout

  = link_to 'Empty cart', cart, method: :delete, confirm: 'Are you sure?', remote: true, class: 'btn btn-danger'
